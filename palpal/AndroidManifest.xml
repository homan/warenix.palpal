<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.dyndns.warenix.palpaltwitter" android:versionCode="1"
	android:versionName="25 aug 2011">
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<!-- for location picker activity -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<supports-screens android:largeScreens="true"
		android:normalScreens="true" android:smallScreens="true"
		android:anyDensity="true" />

	<application android:icon="@drawable/ic_launcher"
		android:label="@string/app_name" android:debuggable="true">

		<uses-library android:name="com.google.android.maps" />

		<!--send search query to SearchActivity and search button for all activities -->
		<meta-data android:name="android.app.default_searchable"
			android:value="org.dyndns.warenix.palpal.social.twitter.activity.SearchActivity" />

		<activity android:name="org.dyndns.warenix.palpal.PalPalApp">
		</activity>
		<activity
			android:name="org.dyndns.warenix.palpal.map.activity.LocationPickerActivity"
			android:theme="@style/palpal_theme" android:launchMode="singleTop">
		</activity>
		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.UserListActivity"
			android:theme="@style/palpal_theme" android:launchMode="singleTop">
		</activity>

		<activity android:name="org.dyndns.warenix.palpal.BubbleMessageListActivity"
			android:theme="@style/palpal_theme" android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.AccountActivity"
			android:theme="@style/palpal_theme">
		</activity>
		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.AuthenTwitterActivity"
			android:label="@string/app_name" android:theme="@style/palpal_theme"
			android:windowSoftInputMode="adjustPan">
		</activity>
		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.ComposeMessageActivity"
			android:theme="@style/palpal_theme">
		</activity>
		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.PersonActivity"
			android:theme="@style/palpal_theme">
			<!-- user:// protocol -->
			<intent-filter>
				<category android:name="android.intent.category.DEFAULT" />
				<action android:name="android.intent.action.VIEW" />
				<data android:scheme="user" />
			</intent-filter>
		</activity>
		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.ConversationActivity"
			android:theme="@style/palpal_theme"></activity>
		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.DirectMessageActivity"
			android:theme="@style/palpal_theme"></activity>
		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.MentionMessageActivity"
			android:theme="@style/palpal_theme"></activity>

		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.SearchActivity"
			android:theme="@style/palpal_theme">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/quick_search" />
		</activity>

		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.TagDefActivity"
			android:theme="@style/palpal_translucent">
			<!-- user:// protocol -->
			<intent-filter>
				<category android:name="android.intent.category.DEFAULT" />
				<action android:name="android.intent.action.VIEW" />
				<data android:scheme="hashtag" />
			</intent-filter>
		</activity>

		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.ImageAlbumActivity"
			android:theme="@style/palpal_theme" android:label="PalPal Twitter Album">
		</activity>

		<activity
			android:name="org.dyndns.warenix.palpal.social.twitter.activity.ImageGalleryActivity"
			android:theme="@style/palpal_theme" android:label="PalPal Image Gallery">
		</activity>

		<service android:name="org.dyndns.warenix.palpal.service.UpdateMessageService" />
		<service android:name="org.dyndns.warenix.palpal.service.SendMessageService" />
		<service android:name="org.dyndns.warenix.palpal.service.CommonTaskService" />

		<provider
			android:name="org.dyndns.warenix.palpal.social.twitter.search.TwitterSearchProvider"
			android:authorities="org.dyndns.warenix.palpal.social.twitter.search.TwitterSearchProvider" />

	</application>
</manifest>