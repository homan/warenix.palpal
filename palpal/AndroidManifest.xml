<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.dyndns.warenix.palpal" android:installLocation="auto" android:versionName="1.3" android:versionCode="4">
	<uses-sdk android:minSdkVersion="3" />

	<!-- connect to Facebook & Twitter server -->
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- for facebook checkin -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

	<supports-screens android:largeScreens="true"
		android:normalScreens="true" android:smallScreens="true"
		android:anyDensity="true" />

	<application android:icon="@drawable/ic_launcher"
		android:label="@string/app_name" android:debuggable="true">
		<uses-library android:name="com.google.android.maps"></uses-library>
		<provider android:name=".content.LocalFileContentProvider"
			android:authorities="org.dyndns.warenix.localfile" />

		<activity android:name=".PalPalApp" android:label="@string/app_name"
			android:theme="@style/palpal_theme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".PalPalPreferenceActivity"
			android:label="PalPal" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.FriendsActivity"
			android:label="PalPalSearch" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.NewsFeedActivity"
			android:label="PalPalFacebook" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.CommentActivity"
			android:label="Read Post" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.AlbumActivity"
			android:label="View User Album" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.AlbumPhotoActivity"
			android:label="View Album Photo" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.NotificationActivity"
			android:label="Notification" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.CheckinsActivity"
			android:label="Checkins" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.facebook.activity.ShareActivity"
			android:label="PalPalFacebook" android:theme="@style/palpal_theme">
			<!-- share link -->
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<data android:mimeType="text/plain" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<!-- share image -->
			<!-- <intent-filter> -->
			<!-- <action android:name="android.intent.action.SEND" /> -->
			<!-- <data android:mimeType="image/*" /> -->
			<!-- <category android:name="android.intent.category.DEFAULT" /> -->
			<!-- </intent-filter> -->
		</activity>


		<activity android:name=".social.twitter.OAuthTwitterActivity"
			android:label="OAuth PalPalTwitter" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.twitter.ComposeTwitterStatusActivity"
			android:label="Compose Twitter Status" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.twitter.TwitterTimelineActivity"
			android:label="PalPalTwitter" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.twitter.ConversationActivity"
			android:label="Conversation" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.twitter.PersonActivity"
			android:label="PalPalTwitter" android:theme="@style/palpal_theme">
		</activity>
		<activity android:name=".social.twitter.TwitterStreamActivity"
			android:label="PalPalTwitter Stream" android:theme="@style/palpal_theme">
		</activity>


	</application>


</manifest> 