<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/blue_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/palpalColor"
        android:text="Please link any of the following social networks to start using PalPal"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/account_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blue_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Twitter" />

    <Button
        android:id="@+id/account_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_twitter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Facebook" />

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Done"
        android:textSize="24sp" />

</RelativeLayout>