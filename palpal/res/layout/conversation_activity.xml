<RelativeLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/activity_background">
	<LinearLayout android:id="@+id/header_bar"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<include layout="@layout/header_bar" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<Button android:background="@drawable/pencil"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/add" android:layout_alignTop="@+id/header_bar"
		android:layout_alignBottom="@+id/header_bar"
		android:layout_alignRight="@+id/header_bar" />

	<LinearLayout android:id="@+id/content"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:paddingLeft="0dip" android:orientation="vertical"
		android:layout_below="@+id/header_bar">
		<Button android:id="@+id/refresh" android:gravity="center_vertical|center_horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="" android:visibility="gone" android:layout_below="@+id/activityTitle" />
		<ListView android:layout_width="match_parent" android:id="@+id/listView1"
			android:layout_height="fill_parent" android:cacheColorHint="#00000000"
			android:listSelector="@drawable/action_item_selected"
			android:fastScrollEnabled="true" />
	</LinearLayout>


</RelativeLayout>
