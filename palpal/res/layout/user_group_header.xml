<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="@dimen/padding_top" android:paddingBottom="@dimen/padding_bottom">

	<org.dyndns.warenix.widget.WebImage
		android:layout_alignParentLeft="true" android:paddingLeft="40dip"
		android:id="@+id/profileImage" android:layout_width="@dimen/profileImageWidth"
		android:layout_height="@dimen/profileImageHeight" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_toRightOf="@+id/profileImage"
		android:id="@+id/username" android:text="username"
		android:layout_alignTop="@+id/profileImage"
		android:layout_alignBottom="@+id/profileImage"
		android:layout_toLeftOf="@+id/postCount" style="@style/status"></TextView>

	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/postCount"
		android:text="statusCount" android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/profileImage"
		android:layout_alignBottom="@+id/profileImage" style="@style/statusCount" />
</RelativeLayout>
