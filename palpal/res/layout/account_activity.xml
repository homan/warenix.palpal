<RelativeLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/activity_background">
	<LinearLayout android:id="@+id/header_bar"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<include layout="@layout/header_bar" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<Button android:background="@android:drawable/ic_menu_add"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/add" android:layout_alignTop="@+id/header_bar"
		android:layout_alignBottom="@+id/header_bar"
		android:layout_alignRight="@+id/header_bar" />

	<ListView android:id="@+id/accountList" android:layout_below="@+id/header_bar"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:listSelector="@drawable/action_item_selected" />
</RelativeLayout>
