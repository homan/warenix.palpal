<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:cacheColorHint="#00000000" android:background="@drawable/tile">

	<org.dyndns.warenix.widget.WebImage
		android:layout_alignTop="@+id/profileImage" android:id="@+id/profileImage"
		android:layout_width="@dimen/profileImageWidth" android:layout_height="@dimen/profileImageHeight"
		android:layout_centerHorizontal="true" android:padding="10dip" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/username"
		android:text="username" style="@style/status" android:layout_below="@+id/profileImage"
		android:layout_centerHorizontal="true" android:padding="10dip"></TextView>

	<TextView android:text="Statuses" android:id="@+id/statusCounterLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/username" android:padding="10dip"></TextView>
	<TextView android:text="followerCounter" android:id="@+id/statusCounter"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/username" android:layout_toRightOf="@+id/statusCounterLabel"
		android:padding="10dip"></TextView>

	<TextView android:text="Followers" android:id="@+id/followerCounterLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/statusCounter" android:padding="10dip"></TextView>
	<TextView android:text="followerCounter" android:id="@+id/followerCounter"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/statusCounter" android:layout_toRightOf="@+id/followerCounterLabel"
		android:padding="10dip"></TextView>

	<TextView android:text="Followings" android:id="@+id/followingCounterLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/followerCounter" android:padding="10dip"></TextView>
	<TextView android:text="followingCounter" android:id="@+id/followingCounter"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/followerCounter" android:layout_toRightOf="@+id/followingCounterLabel"
		android:padding="10dip"></TextView>

	<TextView android:text="Favourites" android:id="@+id/favouriteCounterLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/followingCounter" android:padding="10dip"></TextView>
	<TextView android:text="favouriteCounter" android:id="@+id/favouriteCounter"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/followingCounter" android:layout_toRightOf="@+id/favouriteCounterLabel"
		android:padding="10dip"></TextView>


	<TextView android:text="Website" android:id="@+id/websiteLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/favouriteCounter" android:padding="10dip"></TextView>
	<TextView android:text="website" android:id="@+id/website"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/favouriteCounter" android:layout_toRightOf="@+id/websiteLabel"
		android:padding="10dip"></TextView>

	<TextView android:text="Description" android:id="@+id/descriptionLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/website" android:padding="10dip"></TextView>
	<TextView android:text="description" android:id="@+id/description"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/website" android:layout_toRightOf="@+id/descriptionLabel"
		android:padding="10dip"></TextView>

</RelativeLayout>
